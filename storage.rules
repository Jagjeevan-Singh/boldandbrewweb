rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // A helper function to check if the user is an owner, by reading from Firestore.
    // This requires a read from your Firestore 'users' collection.
    function isOwner() {
      return get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }

    match /product_images/{imageId} {
      // Allow only authenticated owners to write (upload/delete) files
      allow write: if isOwner();
      // Allow everyone to read the images for the public website
      allow read: if true;
    }
  }
}